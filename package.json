{
  "name": "smartshopper-ai-extension",
  "version": "1.0.0",
  "description": "AI-powered price comparison extension with cross-site product matching",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "scrape:flipkart": "node scripts/flipkart-search.js"
  },
  "keywords": [
    "price-comparison",
    "e-commerce",
    "chrome-extension",
    "product-matching"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.1",
    "body-parser": "^2.2.0",
    "chart.js": "^4.5.1",
    "cheerio": "^1.1.2",
    "express": "^5.1.0",
    "node-fetch": "^2.7.0",
    "playwright": "^1.40.0",
    "puppeteer": "^24.32.0",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "cors": "^2.8.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^23.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "extension/**/*.js",
      "server/**/*.js",
      "scripts/**/*.js",
      "!**/node_modules/**"
    ]
  }
}
